%ul.nav.nav-tabs
  %li.active
    %a{"data-toggle" => "tab", :href => "#home"} Datos
  %li
    %a{"data-toggle" => "tab", :href => "#menu1"} Dispositivos
  %li
    %a{"data-toggle" => "tab", :href => "#menu2"} Reportes
.tab-content
  #home.tab-pane.fade.in.active
    %h3
    = form_for(@customer) do |f|
      - if @customer.errors.any?
        #error_explanation
          %h2
            = pluralize(@customer.errors.count, "error")
            prohibited this category from being saved:
          %ul
            - @customer.errors.full_messages.each do |message|
              %li= message
      #accordion.panel-group
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse1"}
                Datos Generales
          #collapse1.panel-collapse.collapse.in
            .panel-body
              .row
                .col-sm-4
                  = f.label :name
                  = f.text_field :name, {class: "form-control"}
                .col-sm-4
                  = f.label :adress
                  = f.text_area :adress, {class: "form-control"}
                .col-sm-4
                  = f.label :phone
                  = f.text_field :phone, {class: "form-control"}
              .row
                .col-sm-4
                  = f.label :contact
                  = f.text_field :contact, {class: "form-control"}
                .col-sm-4
                  = f.label :rfc
                  = f.text_field :rfc, {class: "form-control"}
                .col-sm-4
                  = f.label :email
                  = f.text_field :email, {class: "form-control"}
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse2"}
                Datos Servidor
          #collapse2.panel-collapse.collapse
            .panel-body
              .row
                .col-sm-3
                  = f.label :ip
                  = f.text_field :ip, {class: "form-control"}
                .col-sm-3
                  = f.label :server
                  = f.text_area :server
                .col-sm-3
                  = f.label :datacenter
                  = f.check_box :datacenter, {class: "form-control"}
              .row
                .col-sm-3
                  = f.label :vpacesetter, "Version Pacesetter"
                  = f.text_field :vpacesetter, {class: "form-control"}
                .col-sm-3
                  = f.label :vprogress, "Version Progress"
                  = f.text_field :vprogress, {class: "form-control"}
                .col-sm-3
                  = f.label :userNumber, "Numero de Usuarios"
                  = f.number_field :userNumber, {class: "form-control"}
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse3"}
                Datos Programas
          #collapse3.panel-collapse.collapse
            .panel-body
              .row
                .col-sm-3
                  = f.label :catalog
                  = f.text_field :catalog
                .col-sm-3
                  = f.label :softwareC
                  = f.text_field :softwareC
                .col-sm-3
                  = f.label :programesp, "Programas Especiales"
                  = f.text_area :programesp
              .row
                .col-sm-3
                  = f.label :emailpdf
                  = f.text_area :emailpdf
                .col-sm-3
                  = f.label :emailxml
                  = f.text_area :emailxml
                .col-sm-3
                  = f.label :pdf
                  = f.check_box :pdf
      .actions
        = f.submit "Guardar", class: "btn btn-default"

  #menu1.tab-pane.fade
    %h3 Dispositivos
    .row-fluid
      .col-md-12
        = render   'appliances_grid'
  #menu2.tab-pane.fade
    %h3 Reportes
    .row-fluid
      .col-md-12
        = render   'tickets_grid'
  