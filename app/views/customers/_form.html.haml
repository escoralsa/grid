%ul.nav.nav-tabs
  %li.active
    %a{"data-toggle" => "tab", :href => "#home"} Datos
  %li
    %a{"data-toggle" => "tab", :href => "#menu1"} Dispositivos
  %li
    %a{"data-toggle" => "tab", :href => "#menu2"} Reportes
  %li
    %a{"data-toggle" => "tab", :href => "#menu3"} Contactos
  %li
    %a{"data-toggle" => "tab", :href => "#menu4"} Usuarios Linux
  %li
    %a{"data-toggle" => "tab", :href => "#menu5"} Programas
.tab-content
  #home.tab-pane.fade.in.active
    %h3
    = form_for(@customer) do |f|
      - if @customer.errors.any?
        #error_explanation
          %h2
            = pluralize(@customer.errors.count, "error")
            prohibited this category from being saved:
          %ul
            - @customer.errors.full_messages.each do |message|
              %li= message
      #accordion.panel-group
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse1"}
                Datos Generales
          #collapse1.panel-collapse.collapse.in
            .panel-body
              .row
                .col-sm-4
                  = f.label :accnumber
                  = f.text_field :accnumber, {class: "form-control"}
                .col-sm-4
                  = f.label :name
                  = f.text_field :name, {class: "form-control"}
              .row
                .col-sm-4
                  = f.label :adress
                  = f.text_area :adress, {class: "form-control"}
                .col-sm-4
                  = f.label :phone
                  = f.text_field :phone, {class: "form-control"}
              .row
                .col-sm-4
                  = f.label :contact
                  = f.text_field :contact, {class: "form-control"}
                .col-sm-4
                  = f.label :rfc
                  = f.text_field :rfc, {class: "form-control"}
              .row
                .col-sm-4
                  = f.label :email
                  = f.text_field :email, {class: "form-control"}
        .panel.panel-default
          .panel-heading
            %h4.panel-title
              %a{"data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse2"}
                Datos Servidor
          #collapse2.panel-collapse.collapse
            .panel-body
              .row
                .col-xs-1
                  = f.label :ip, "IP"
                .col-xs-4
                  = f.text_field :ip, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :server
                .col-sm-4
                  = f.text_area :server, {class: "form-control"}
              .row
                .col-sx-1
                  = f.label :datacenter, "Data Center"
                .col-sm-4
                  = f.check_box :datacenter, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :dataCenterLocation, "Ubicacion Data Center"
                .col-sm-4
                  = f.select(:dataCenterLocation, options_for_select(["USA","Mexico"]),{:include_blank => "Select" }, {:class => "form-control"})
              .row
                .col-xs-1
                  = f.label :vpacesetter, "Version Pacesetter"
                .col-sm-4
                  = f.text_field :vpacesetter, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :vprogress, "Version Progress"
                .col-sm-4
                  = f.text_field :vprogress, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :userNumber, "Numero de Usuarios"
                .col-sm-4
                  = f.number_field :userNumber, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :catalog, "Catalogo JX"
                .col-sm-4
                  = f.text_area :catalog, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :softwareC, "Tipo de Conexion"
                .col-sm-4
                  = f.select(:softwareC, options_for_select(["Telnet","Accuterm"]),{:include_blank => "Select"}, {:class => "form-control"} )
              .row
                .col-xs-1
                  = f.label :link, "Link Accuterm"
                .col-xs-4
                  = f.text_field :link, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :programesp, "Programas Especiales"
                .col-sm-4
                  = f.text_area :programesp, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :emailpdf
                .col-sm-4
                  = f.text_area :emailpdf, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :emailxml
                .col-sm-4
                  = f.text_area :emailxml, {class: "form-control"}
              .row
                .col-xs-1
                  = f.label :pdf
                .col-sm-4
                  = f.check_box :pdf
      .actions
        = f.submit "Guardar", class: "btn btn-default"

  #menu1.tab-pane.fade
    %h3 Dispositivos
    .row-fluid
      .col-md-12
        = render   'appliances_grid'
  #menu2.tab-pane.fade
    %h3 Reportes
    .row-fluid
      .col-md-12
        = render   'tickets_grid'
  #menu3.tab-pane.fade
    %h3 Contactos
    .row-fluid
      .col-md-12
        = render   'contacts_grid'
  #menu4.tab-pane.fade
    %h3 Usuarios Linux
    .row-fluid
      .col-md-12
        = render   'linux_users_grid'
  #menu5.tab-pane.fade
    %h3 Programas
    .row-fluid
      .col-md-12
        = render   'pace_program_customers_grid'